# Required Zoho OAuth credentials
ZOHO_CLIENT_ID=replace-with-client-id
ZOHO_CLIENT_SECRET=replace-with-client-secret
ZOHO_REFRESH_TOKEN=replace-with-refresh-token   # https://www.zoho.com/accounts/protocol/oauth/web-apps/refresh-token.html
ZOHO_FOLDER_ID=replace-with-workdrive-folder-id # Copy from WorkDrive folder URL

# Optional regional / endpoint overrides
ZOHO_REGION=us
ZOHO_SHARE_MODE=public
ZOHO_CONFLICT_MODE=abort
ZOHO_MAX_RETRIES=3
ZOHO_RETRY_DELAY=2

# Endpoints (override when using custom domains)
# ZOHO_API_BASE=https://www.zohoapis.com/workdrive/api/v1
# ZOHO_ACCOUNTS_BASE=https://accounts.zoho.com
